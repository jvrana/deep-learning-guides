        y_arr = net(g)[-1:]
        y_hat = g.ndata['y_hat'][~m].float()
        loss = torch.tensor(0.)
        for y in y_arr:
            loss += lossfn(y[~m], y_hat.float())
        
        optim.zero_grad()
        loss.backward()
        optim.step()

        losses.append(loss.detach().item())
